{
  "name": "frontend-toolkit",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "webpack-dev-server --display-error-details --hot --config webpack.config.dev.js",
    "build": "webpack --display-error-details --define process.env.NODE_ENV=\"'production'\" --config webpack.config.prod.js",
    "test": "jest",
    "test:update": "npm test -- --updateSnapshot",
    "test:ci": "npm test -- --ci --coverage",
    "lint": "eslint ./src --ext js,jsx",
    "lint:fix": "npm run lint -- --fix",
    "lint:sonar": "node ./scripts/sonar.lint.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:vitorsalgado/frontend-toolkit.git"
  },
  "author": {
    "name": "Vitor Hugo Salgado",
    "email": "vsalgadopb@gmail.com",
    "url": "https://github.com/vitorsalgado"
  },
  "bugs": "https://github.com/vitorsalgado/frontend-toolkit/issues",
  "homepage": "https://github.com/vitorsalgado/frontend-toolkit/blob/master/README.md",
  "dependencies": {
    "nodejs-fx": "^1.1.0",
    "redux": "^4.0.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.0",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "case-sensitive-paths-webpack-plugin": "^2.1.2",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^1.0.0",
    "dotenv": "^6.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.1.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-standard": "^3.1.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "interpolate-html-plugin": "^3.0.0",
    "jest": "^23.4.1",
    "jest-puppeteer": "^3.2.1",
    "joi": "^13.4.0",
    "mini-css-extract-plugin": "^0.4.1",
    "node-sass": "^4.9.2",
    "npm": "^6.2.0",
    "optimize-css-assets-webpack-plugin": "^5.0.0",
    "postcss-loader": "^2.1.6",
    "puppeteer": "^1.6.0",
    "react-hot-loader": "^4.3.3",
    "react-test-renderer": "^16.4.1",
    "sass-loader": "^7.0.3",
    "sonarjs": "^1.0.0",
    "style-loader": "^0.21.0",
    "sw-precache-webpack-plugin": "^0.11.5",
    "thread-loader": "^1.1.5",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "url-loader": "^1.0.1",
    "webpack": "^4.16.0",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.0.8",
    "webpack-config-utils": "^2.3.0",
    "webpack-dev-server": "^3.1.4",
    "webpack-manifest-plugin": "^2.0.3",
    "webpack-merge": "^4.1.3"
  },
  "jest": {
    "notify": false,
    "verbose": true,
    "errorOnDeprecated": true,
    "testEnvironment": "jsdom",
    "setupTestFrameworkScriptFile": "./__tests__/enzyme.setup.js",
    "coverageDirectory": "reports/coverage",
    "testMatch": [
      "**/src/**spec.js(x)"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy"
    }
  }
}
